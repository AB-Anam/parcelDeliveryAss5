{
  "info": {
    "name": "Parcel Delivery API",
    "_postman_id": "parcel-delivery-api-collection",
    "description": "Postman collection for Parcel Delivery API (Sender, Receiver, Admin requests, Parcel History, Tracking)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Sender",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type","value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Sender\",\n  \"email\": \"alice.sender@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"sender\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/api/auth/register","host":["{{baseUrl}}"],"path":["api","auth","register"]}
          }
        },
        {
          "name": "Register Receiver",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type","value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bob Receiver\",\n  \"email\": \"bob.receiver@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"receiver\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/api/auth/register","host":["{{baseUrl}}"],"path":["api","auth","register"]}
          }
        },
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type","value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Charlie Admin\",\n  \"email\": \"charlie.admin@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"admin\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/api/auth/register","host":["{{baseUrl}}"],"path":["api","auth","register"]}
          }
        },
        {
          "name": "Login Sender",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type","value": "application/json"}],
            "body": {"mode":"raw","raw":"{\n  \"email\": \"alice.sender@example.com\",\n  \"password\": \"password123\"\n}"},
            "url": {"raw":"{{baseUrl}}/api/auth/login","host":["{{baseUrl}}"],"path":["api","auth","login"]}
          }
        },
        {
          "name": "Login Receiver",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type","value": "application/json"}],
            "body": {"mode":"raw","raw":"{\n  \"email\": \"bob.receiver@example.com\",\n  \"password\": \"password123\"\n}"},
            "url": {"raw":"{{baseUrl}}/api/auth/login","host":["{{baseUrl}}"],"path":["api","auth","login"]}
          }
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type","value": "application/json"}],
            "body": {"mode":"raw","raw":"{\n  \"email\": \"charlie.admin@example.com\",\n  \"password\": \"password123\"\n}"},
            "url": {"raw":"{{baseUrl}}/api/auth/login","host":["{{baseUrl}}"],"path":["api","auth","login"]}
          }
        }
      ]
    },
    {
      "name": "Sender Parcel Requests",
      "item": [
        {
          "name": "Create Parcel",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Content-Type","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{senderToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"Box\",\n  \"weight\": 2.5,\n  \"receiverId\": \"{{receiverId}}\",\n  \"pickupAddress\": \"123 Main St\",\n  \"deliveryAddress\": \"456 Market Rd\",\n  \"fee\": 100\n}"
            },
            "url": {"raw":"{{baseUrl}}/api/parcels","host":["{{baseUrl}}"],"path":["api","parcels"]}
          }
        },
        {
          "name": "Get My Parcels",
          "request": {
            "method": "GET",
            "header": [{"key":"Authorization","value":"Bearer {{senderToken}}"}],
            "url": {"raw":"{{baseUrl}}/api/parcels/me","host":["{{baseUrl}}"],"path":["api","parcels","me"]}
          }
        },
        {
          "name": "Cancel Parcel",
          "request": {
            "method": "PATCH",
            "header": [{"key":"Authorization","value":"Bearer {{senderToken}}"}],
            "body":{"mode":"raw","raw":"{}"},
            "url": {"raw":"{{baseUrl}}/api/parcels/cancel/{{parcelId}}","host":["{{baseUrl}}"],"path":["api","parcels","cancel","{{parcelId}}"]}
          }
        }
      ]
    },
    {
      "name": "Receiver Parcel Requests",
      "item":[
        {
          "name":"Confirm Delivery",
          "request":{
            "method":"PATCH",
            "header":[{"key":"Authorization","value":"Bearer {{receiverToken}}"}],
            "body":{"mode":"raw","raw":"{}"},
            "url":{"raw":"{{baseUrl}}/api/parcels/confirm/{{parcelId}}","host":["{{baseUrl}}"],"path":["api","parcels","confirm","{{parcelId}}"]}
          }
        },
        {
          "name":"Get My Parcels",
          "request":{
            "method":"GET",
            "header":[{"key":"Authorization","value":"Bearer {{receiverToken}}"}],
            "url":{"raw":"{{baseUrl}}/api/parcels/me","host":["{{baseUrl}}"],"path":["api","parcels","me"]}
          }
        },
        {
          "name":"Parcel History",
          "request":{
            "method":"GET",
            "header":[{"key":"Authorization","value":"Bearer {{receiverToken}}"}],
            "url":{"raw":"{{baseUrl}}/api/parcels/history/{{parcelId}}","host":["{{baseUrl}}"],"path":["api","parcels","history","{{parcelId}}"]}
          }
        }
      ]
    },
    {
      "name": "Admin Requests",
      "item":[
        {
          "name":"List All Users",
          "request":{
            "method":"GET",
            "header":[{"key":"Authorization","value":"Bearer {{adminToken}}"}],
            "url":{"raw":"{{baseUrl}}/api/users","host":["{{baseUrl}}"],"path":["api","users"]}
          }
        },
        {
          "name":"Block User",
          "request":{
            "method":"PATCH",
            "header":[
              {"key":"Content-Type","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{adminToken}}"}
            ],
            "body":{"mode":"raw","raw":"{ \"blocked\": true }"},
            "url":{"raw":"{{baseUrl}}/api/users/block/{{userId}}","host":["{{baseUrl}}"],"path":["api","users","block","{{userId}}"]}
          }
        },
        {
          "name":"Unblock User",
          "request":{
            "method":"PATCH",
            "header":[
              {"key":"Content-Type","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{adminToken}}"}
            ],
            "body":{"mode":"raw","raw":"{ \"blocked\": false }"},
            "url":{"raw":"{{baseUrl}}/api/users/block/{{userId}}","host":["{{baseUrl}}"],"path":["api","users","block","{{userId}}"]}
          }
        },
        {
          "name":"Get All Parcels",
          "request":{
            "method":"GET",
            "header":[{"key":"Authorization","value":"Bearer {{adminToken}}"}],
            "url":{"raw":"{{baseUrl}}/api/parcels","host":["{{baseUrl}}"],"path":["api","parcels"]}
          }
        },
        {
          "name":"Get All Blocked Users",
          "request":{
            "method":"GET",
            "header":[{"key":"Authorization","value":"Bearer {{adminToken}}"}],
            "url":{"raw":"{{baseUrl}}/api/users/blocked","host":["{{baseUrl}}"],"path":["api","users","blocked"]}
          }
        },
        {
          "name":"Update Parcel Status",
          "request":{
            "method":"PATCH",
            "header":[
              {"key":"Content-Type","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{adminToken}}"}
            ],
            "body":{"mode":"raw","raw":"{ \"status\": \"Approved\", \"note\": \"Approved by admin\" }"},
            "url":{"raw":"{{baseUrl}}/api/parcels/status/{{parcelId}}","host":["{{baseUrl}}"],"path":["api","parcels","status","{{parcelId}}"]}
          }
        },
        {
          "name":"Block Parcel",
          "request":{
            "method":"PATCH",
            "header":[
              {"key":"Content-Type","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{adminToken}}"}
            ],
            "body":{"mode":"raw","raw":"{ \"blocked\": true }"},
            "url":{"raw":"{{baseUrl}}/api/parcels/block/{{parcelId}}","host":["{{baseUrl}}"],"path":["api","parcels","block","{{parcelId}}"]}
          }
        }
      ]
    },
    {
      "name":"Public Parcel Requests",
      "item":[
        {
          "name":"Track Parcel",
          "request":{
            "method":"GET",
            "url":{"raw":"{{baseUrl}}/api/parcels/track/{{trackingId}}","host":["{{baseUrl}}"],"path":["api","parcels","track","{{trackingId}}"]}
          }
        }
      ]
    }
  ],
  "variable":[
    {"key":"baseUrl","value":"https://parcel-delivery-ass5.vercel.app"},
    {"key":"adminToken","value":""},
    {"key":"senderToken","value":""},
    {"key":"receiverToken","value":""},
    {"key":"receiverId","value":""},
    {"key":"parcelId","value":""},
    {"key":"trackingId","value":""},
    {"key":"userId","value":""}
  ]
}
