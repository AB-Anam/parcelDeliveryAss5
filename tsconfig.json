{
  "compilerOptions": {
    "target": "ES2020",                 // modern output
    "module": "CommonJS",               // Node.js friendly
    "moduleResolution": "Node",         // resolves imports like Node
    "outDir": "dist",                   // compiled JS goes here
    "rootDir": "src",                   // only compile src/
    "strict": true,                     // full type safety
    "esModuleInterop": true,            // allows clean `import express from "express"`
    "skipLibCheck": true,               // faster builds, skip type defs
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
